{
    "name": "Poop Recipes",
    "version": "0.1",
    "manifest_version": 2,

    "description": "Turns your recipe websites into something... crappy.",
    
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "run_at": "document_start",
        "js": [
            "PoopRecipes.js"
        ]
    }, {
        "matches": [
            "http://allrecipes.com/*",
            "https://allrecipes.com/*"
        ],
        "run_at": "document_end",
        "js": [
            "AllRecipes.js"
        ]
    }],

    "permissions": [
        "<all_urls>"
    ]
}